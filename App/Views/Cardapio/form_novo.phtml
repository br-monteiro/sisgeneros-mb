<script>
$(document).ready(function () {
    var beginning_date = $("#beginning_date");
    var ending_date = $("#ending_date");
    var btnNextMenu = $(".btn-next-menu");
    var btnNextRecipes = $(".btn-next-recipes");
    var btnNextIngredients = $(".btn-next-ingredients");
    var btnPreviousIngredients = $(".btn-previous-ingredients");
    var menuJson = [];

    initView();

    beginning_date.on("blur", function() {
        var res = beginning_date.val().split("-");
        if(typeof res !== "undefined") {
            ending_date.val( formatDate(res[2] + "-" + res[1] + "-" + res[0]) );
        }
    });

    /**
        @HACK
        check this function
    */
    btnNextMenu.on("click", function() {
        if (!validateDate(ending_date.val())) {
            showFormCard("menu", false);
            showFormCard("recipes", true);
            
            var menu = {
                "omsId" : $("#om").val(),
                "beginning_date" : beginning_date.val(),
                "ending_date" : ending_date.val()
            };
            populateMenuObj(menu);
            $(".title-menu").html( "Cardápio de " + beginning_date.val() + " à "+ ending_date.val() );
        } else {
            console.log("Adicionar mensagem de erro ao usuário!");
            // COLOCAR AQUI MENSAGEM DE ERRO, APÓS A VALIDAÇÃO
        }
    });

    btnNextRecipes.on("click", function() {
        var recipes = {
            "recipes" : {
                "mealsId" : $("#meals").val(),
                "recipesPatternsId" : $("#recipes").val(),
                "quantity_people" : $("#quantity_people").val(),
                "date" : $("#date").val()
            }
        };
        populateMenuObj(recipes);
        showFormCard("recipes", false);
        showFormCard("ingredients", true);
    });

    btnNextIngredients.on("click", function() {
        showFormCard("ingredients", false);
        showFormCard("recipes", true);
        showFormCard("resume-menu", true);
        buildTableResume();
        cleanFormRecipes();
        $('#row-list').html("");
    });

    btnPreviousIngredients.on("click", function() {
        showFormCard("ingredients", false);
        showFormCard("recipes", true);
    });

    $("#recipes").on("change", function() {
        $.get("/app/sisgeneros/Recipespatterns/findRecipeItemsByRecipesId/id/"+this.value, function( data ) {
            buildTableIngredients(data);
        });
    });

    function formatDate(dateVal) {
        var date = new Date(dateVal);
        var nextWeek = new Date(date.getTime() + 7 * 24 * 60 * 60 * 1000);

        var month = nextWeek.getMonth()+1;
        var day = nextWeek.getDate();

        var output =
            (day < 10 ? '0' : '') + day + '-' +
            (month < 10 ? '0' : '') + month + '-' +
            nextWeek.getFullYear();

        return output;
    }

    function showFormCard(form,status) {
        if (form === "recipes") {
            (status) ? $(".recipes").show() : $(".recipes").hide();
        } else if (form === "menu") {
            (status) ? $(".menu").show() : $(".menu").hide();
        } else if (form === "ingredients") {
            (status) ? $(".ingredients").show() : $(".ingredients").hide();
        } else if (form === "resume-menu") {
            (status) ? $(".resume-menu").show() : $(".resume-menu").hide();
        }
    }

    function initView() {
        showFormCard("recipes",false);
        showFormCard("ingredients",false);
        showFormCard("resume-menu",false);
    }

    function cleanFormRecipes() {
        $("#meals").val("");
        $("#recipes").val("");
        $("#quantity_people").val("");
        $("#date").val("");
    }

    function buildTableIngredients(data) {
        var strHTML = "";
        var obj = JSON.parse(data);
        $('#row-list').html("");

        for(i = 0; i < obj.length; i++) {
            strHTML = "<tr>";
            strHTML += "<td><input type='hidden' name='biddings_items_id[]' value='" + obj[i].id + "'>";
            strHTML += "<input type='text' name='name[]' value='" + obj[i].name + "' class='form-control'></td>";
            strHTML += "<td><input type='text' name='suggested_quantity[]' value='" + obj[i].quantity + "' class='form-control'></td>";
            strHTML += "<td><input type='text' name='quantity[]' value='1' class='form-control'></td>";
            strHTML += "<td><a class='remove btn btn-danger btn-sm' data-reference='-X-'><i class='fa fa-times'></i></a></td>";
            strHTML += "</tr>";
            $('#row-list').append( strHTML );
        }
    }

    function buildTableResume() {
        var strHTML = "";
        strHTML = "<tr>";
        strHTML += "<td>" + $("#date").val() + "</td>";
        strHTML += "<td>" + $("#meals").val() + "</td>";
        strHTML += "<td>" + $("#recipes").val() + "</td>";
        strHTML += "<td>" + $("#quantity_people").val() + "</td>";
        strHTML += "</tr>";

        $("#row-menu-resume").append( strHTML );
    }

    function populateMenuObj(itemObject) {
        menuJson.push(itemObject);
        console.log(menuJson);
    }

    function validateDate(dateVal) {
        var rxDatePattern = "(0[1-9]|[12][0-9]|3[01])[-](0[1-9]|1[012])[-]\d{4}";
        if(dateVal.match(rxDatePattern)) {
            return true;
        }
        return false;
    }
});
</script>
<script>
$(document).ready(function () {
    var beginning_date = $("#beginning_date");
    var ending_date = $("#ending_date");
    var btnPreviousIngredients = $(".btn-previous-ingredients");
    var btnCheckoutMenu = $(".btn-checkout-menu");
    var menuJson = [];
    var itemsMap = [];
    var menuMap = [];
    var currentDay = 1;
    var currentDayObj = {};
    var x = 1;

    initView();

    beginning_date.on("blur", function() {
        var reverseDate = beginning_date.val().split("-").reverse().join("-");
        var day = new Date(reverseDate);
        var nextWeek = new Date(day.getTime() + 7 * 86400000);
        ending_date.val( formatDate(nextWeek) );
    });

    $(".btn-next-menu").on("click", function() {
        if (!validateDate(ending_date.val())) {
            var reverseDate = beginning_date.val().split("-").reverse().join("-");

            var date = new Date(reverseDate);
            
            for (i = 1; i <= 7; i++) {
                var day = new Date(date.getTime() + i * 86400000);
                var obj = {
                    "date": formatDate(day),
                    "order": i,
                    "data": []
                };

                menuMap.push(obj);
            }

            showFormCard("menu", false);
            showFormCard("recipes", true);
            $("#date").val(getFirstDay());
        } else {
            alert("Data inválida!");
        }
    });

    $(".btn-next-day").on("click", function() {
        if (currentDay < 7) {
            var order = currentDay + 1;
            var day = getObjDay(order);
            if (day) {
                currentDayObj = day;
                currentDay = order;
                $("#date").val( day.date );
            }
        }
    });

    $(".btn-previous-day").on("click", function() {
        if (currentDay > 1) {
            var order = currentDay - 1;
            var day = getObjDay(order);
            if (day) {
                currentDayObj = day;
                currentDay = order;
                $("#date").val( day.date );
            }
        }
    });

    $(".btn-next-recipes").on("click", function() {
        if( !validateDate($("#date").val()) ) {
            if( !validateRangeDate($("#date").val()) ) {
                alert("Data fora do período informado!");
            } else {
                showFormCard("recipes", false);
                showFormCard("ingredients", true);
            }
        } else {
            alert("Data inválida!");
        }
    });

    $(".btn-next-ingredients").on("click", function() {
        getValuesIngredients();
        var recipes = {
            "recipes" : {
                "meals" : {
                    "id" : $("#mealsId").val(),
                    "name" : $("#mealsId option:selected").text(),
                },
                "recipesPatternsId" : $("#recipes").val(),
                "name" : $("#recipes option:selected").text(),
                "quantity" : $("#quantity_people").val(),
                "items" : itemsMap
            }
        };
        //console.log(recipes)
        //var objDay = getObjDay(currentDay);
        //objDay.push(recipes);

        // showFormCard("ingredients", false);
        // showFormCard("recipes", true);
        // showFormCard("resume-menu", true);
        // buildTableResume();
        // cleanFormRecipes();
        // $('#row-list').html("");
    });

    $(".btn-previous-ingredients").on("click", function() {
        showFormCard("ingredients", false);
        showFormCard("recipes", true);
    });

    btnCheckoutMenu.on("click", function() {
        $.ajax({
            type: "POST",
            url: "/app/sisgeneros/Cardapio/registra/",
            data: menuMap,
            success: function (data) {
                $("#resultado").html(data);
            }
        });
    });

    $("#recipes").on("change", function() {
        $.get("/app/sisgeneros/Recipespatterns/findRecipeItemsByRecipesId/id/"+this.value, function( data ) {
            buildTableIngredients(data);
        });
    });

    $(".delete-row").on('click', function() {
        $(this).closest('tr').remove();
    });

    function getFirstDay() {
        return menuMap.find(function(item) {
            return item.order === 1;
        }).date;
    }

    function getObjDay(order) {
        return menuMap.find(function(item) {
            return item.order === order;
        });
    }

    function formatDate(dateVal) {
        var month = dateVal.getMonth() + 1;
        var day = dateVal.getDate();

        var output =
            (day < 10 ? '0' : '') + day + '-' +
            (month < 10 ? '0' : '') + month + '-' +
            dateVal.getFullYear();

        return output;
    }

    function showFormCard(form,status) {
        if (form === "recipes") {
            (status) ? $(".recipes").show() : $(".recipes").hide();
        } else if (form === "menu") {
            (status) ? $(".menu").show() : $(".menu").hide();
        } else if (form === "ingredients") {
            (status) ? $(".ingredients").show() : $(".ingredients").hide();
        } else if (form === "resume-menu") {
            (status) ? $(".resume-menu").show() : $(".resume-menu").hide();
        }
    }

    function initView() {
        showFormCard("recipes",false);
        showFormCard("ingredients",false);
        showFormCard("resume-menu",false);
    }

    function cleanFormRecipes() {
        $("#mealsId").val("");
        $("#recipes").val("");
        $("#quantity_people").val("");
        $("#date").val("");
    }

    function buildTableIngredients(data) {
        var strHTML = "";
        var obj = JSON.parse(data);
        $('#row-list').html("");

        for(i = 0; i < obj.length; i++) {
            strHTML = "<tr>";
            strHTML += "<td><input type='hidden' name='biddings_items_id[]' value='" + obj[i].id + "'>";
            strHTML += "<input type='text' name='name[]' value='" + obj[i].name + "' class='form-control'></td>";
            strHTML += "<td><input type='text' name='suggested_quantity[]' value='" + obj[i].quantity + "' class='form-control'></td>";
            strHTML += "<td><input type='text' name='quantity[]' value='1' class='form-control'></td>";
            strHTML += "<td><button class='delete-row btn btn-danger btn-sm' data-reference='-X-'><i class='fa fa-times'></i></button></td>";
            strHTML += "</tr>";
            $('#row-list').append( strHTML );
        }
    }

    function buildTableResume() {
        var strHTML = "";
        strHTML = "<tr>";
        strHTML += "<td>" + $("#date").val() + "</td>";
        strHTML += "<td>" + $("#mealsId option:selected").text() + "</td>";
        strHTML += "<td>" + $("#recipes option:selected").text() + "</td>";
        strHTML += "<td>" + $("#quantity_people").val() + "</td>";
        strHTML += "</tr>";

        $("#row-menu-resume").append( strHTML );
    }

    function getValuesIngredients() {
        $('td input').each(function() {
            var recipe_item = {};

            if ("biddings_items_id[]" == $(this).attr('name')) {
                //console.log({ "id" : $(this).val() });
                recipe_item = { "id" : $(this).val() };
            } else if ("name[]" == $(this).attr('name')) {
                //console.log({ "name" : $(this).val() });
                recipe_item = { "name" : $(this).val() };
            } else if ("quantity[]" == $(this).attr('name')) {
                //console.log({ "quantity" : $(this).val() });
                recipe_item = { "quantity" : $(this).val() };
            }
            //console.log(recipe_item);
            itemsMap.push(recipe_item);
        });
        
        console.log(itemsMap);
    }

    function validateDate(dateVal) {
        var rxDatePattern = "(0[1-9]|[12][0-9]|3[01])[-](0[1-9]|1[012])[-]\d{4}";
        if(dateVal.match(rxDatePattern)) {
            return true;
        }
        return false;
    }

    function validateRangeDate(valueDate) {
        var valueDate = new Date(valueDate);
        var startDate = new Date(beginning_date.val());
        var endDate = new Date(ending_date.val());
        if(valueDate.getTime() >= startDate.getTime() && valueDate.getTime() <= endDate.getTime()) {
            return true;
        }
        return false;
    }
});
</script>